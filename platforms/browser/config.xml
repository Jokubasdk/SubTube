<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="com.test.subtube" ios-CFBundleVersion="0.0.1" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>
        SubTube
    </name>
    <description>
        Our SubTube app, a WIP.
    </description>
    <author email="HackerManiac@users.noreply.github.com">
        Vidminas Mikucionis
        Jokubas de Kort
        Florian Simoens
    </author>
    <content src="index.html" />
    <icon src="assets/android/SubTube/iconST.png" />
    <access origin="content:///*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="SplashScreen" value="/assets/iconST.png" />
    <preference name="LoadingDialog" value="Loading, Please wait!" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashScreenBackgroundColor" value="white" />
    <preference name="ShowSplashScreen" value="false" />
</widget>
